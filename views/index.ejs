<!-- header - start -->
<%- include('layout/header')%>
    <!-- header - end -->

    <!-- container - start -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <% if (users !='' ) { %>

                            <table class="table table-striped text-center">
                                <thead>
                                    <tr class="table-dark">
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>E-Mail</th>
                                        <th>Phone</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((row, index )=> { %>
                                        <tr class="align-middle">
                                            <td>
                                                <%= index %>
                                            </td>
                                            <td>
                                                <img src="<%= row.image %>" width="50" class="img-thumbnail" />
                                            </td>
                                            <td>
                                                <%= row.name %>
                                            </td>
                                            <td>
                                                <%= row.email %>
                                            </td>
                                            <td>
                                                <%= row.phone %>
                                            </td>
                                            <td>
                                                <a href="" class="text-success"><i class="fa fa-pencil-square-o"
                                                        aria-hidden="true"></i></a>
                                                <a href="" class="text-danger"><i class="fa fa-trash"
                                                        aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>

                            <% } else { %>
                                <h1 class="text-center text-secondary mt-5">
                                    No users found in the database!
                                </h1>
                                <% } %>
            </div>
        </div>
    </div>
    <!-- container - end -->

    <!-- footer - start -->
    <%- include('layout/footer')%>
        <!-- footer - end -->